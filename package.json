{
  "name": "@jordanburke/microsoft-todo-mcp-server",
  "version": "1.0.0",
  "description": "Microsoft Todo MCP service for Claude and Cursor. Fork of @jhirono/todomcp",
  "main": "build/todo-index.js",
  "dependencies": {
    "@azure/msal-node": "^1.18.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.3.1",
    "express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup && chmod +x build/cli.js build/todo-index.js build/create-mcp-config.js build/auth-server.js",
    "start": "node build/todo-index.js",
    "cli": "node build/cli.js",
    "auth": "node build/auth-server.js",
    "dev": "pnpm run build && node build/cli.js",
    "create-config": "node build/create-mcp-config.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "lint": "pnpm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanburke/microsoft-todo-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "cursor",
    "claude",
    "microsoft-todo",
    "todo"
  ],
  "author": "Jordan Burke <jordan.burke@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jordanburke/microsoft-todo-mcp-server/issues"
  },
  "homepage": "https://github.com/jordanburke/microsoft-todo-mcp-server#readme",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.13.11",
    "prettier": "^3.5.3",
    "tsup": "^8.0.0",
    "typescript": "^5.8.2"
  },
  "type": "module",
  "bin": {
    "mstodo": "./build/cli.js",
    "mstodo-config": "./build/create-mcp-config.js"
  },
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "public"
  }
}
